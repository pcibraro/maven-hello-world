pipeline { 
    agent any  
    tools {
        maven 'Maven'
        jdk 'JDK 1.8'
    }
    stages { 
        stage('Call API') {
            steps {
                script {
                    def response = httpRequest "https://twitter.com/1.1/search/tweets.json?q=from%3ANasa%20OR%20%23nasa"

                    def responseContent readJSON text: response.content

                    println responseContent


                }
            }
        }
